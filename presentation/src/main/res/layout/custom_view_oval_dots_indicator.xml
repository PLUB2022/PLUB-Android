<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsClickable="false"
            app:dotsColor="@color/color_c4c4c4"
            app:dotsCornerRadius="7dp"
            app:dotsSize="8dp"
            app:dotsSpacing="5dp"
            app:dotsWidthFactor="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progressMode="false"
            app:selectedDotColor="@color/color_5f5ff9" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            app:dotsClickable="false"
            app:dotsColor="@color/color_c4c4c4"
            app:dotsCornerRadius="7dp"
            app:dotsSize="8dp"
            app:dotsSpacing="5dp"
            app:dotsWidthFactor="5"
            app:layout_constraintStart_toStartOf="@id/dots_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:progressMode="false"
            app:selectedDotColor="@color/transparent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>