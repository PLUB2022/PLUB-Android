<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imv_item_layout"
        android:layout_width="327dp"
        android:layout_height="176dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#C4C4C4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_meet"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_meet_title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="90dp"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:text="스트릿 댄스 신사동스 파이터"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_meet_oneline_introduce"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="114dp"
            android:gravity="top"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="1sp"
            android:text="스트릿 댄스를 배우고 싶은 신사동 여러분을 모집합니다."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:translationY="-0.6sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/image_btn_bookmark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_unchecked_bookmark"
            android:layout_width="32dp"
            android:background="@color/transparent"
            android:layout_height="32dp"
            />

        <ImageView
            android:id="@+id/image_view_ic_location"
            android:layout_width="8dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="@id/text_view_location"
            app:layout_constraintBottom_toBottomOf="@id/text_view_location"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_location"
            />

        <TextView
            android:id="@+id/text_view_location"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_alignParentTop="true"
            android:text="서울 서초구"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_ic_location"
            android:layout_marginTop="142dp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/image_view_ic_people"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:layout_constraintTop_toTopOf="@id/text_view_location"
            app:layout_constraintBottom_toBottomOf="@id/text_view_location"
            app:layout_constraintStart_toEndOf="@id/text_view_location"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_people"
            />

        <TextView
            android:id="@+id/text_view_people"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_alignParentTop="true"
            android:text="모집 인원 5명"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_ic_people"
            android:layout_marginTop="142dp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/image_view_ic_date"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:layout_constraintTop_toTopOf="@id/text_view_date"
            app:layout_constraintBottom_toBottomOf="@id/text_view_date"
            app:layout_constraintStart_toEndOf="@id/text_view_people"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_date"
            />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_alignParentTop="true"
            android:text="매주 금요일 | 오후 5시 30분"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_ic_date"
            android:layout_marginTop="142dp"
            android:gravity="center_vertical"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>