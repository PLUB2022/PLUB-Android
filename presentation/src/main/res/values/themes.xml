<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlubAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_f5f3f6</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/PlubTimePickerStyle</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_363636</item>
    </style>

    <style name="PlubDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_5f5ff9</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/white</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/color_5f5ff9</item>
        <item name="colorControlHighlight">@color/color_5f5ff9</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/color_5f5ff9</item>

        <item name="cornerSize">10dp</item>
    </style>

    <style name="PlubTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_5f5ff9</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/white</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/color_5f5ff9</item>
        <item name="colorControlHighlight">@color/color_5f5ff9</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/color_5f5ff9</item>

        <item name="cornerSize">10dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>
</resources>